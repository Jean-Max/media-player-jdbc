<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<!-- Start Hsql database manager tool  ATTENTION il y a 2 - au lieu de 1 dans -user -->
	<!-- NE PAS OUBLIER DE L ACTIVER DANS HELLO DISPATCHER SERVLET.xml -->

	<bean depends-on="dataSource" class="org.springframework.beans.factory.config.MethodInvokingBean">
		<property name="targetClass" value="org.hsqldb.util.DatabaseManagerSwing" />
		<property name="targetMethod" value="main" />
		<property name="arguments">
			<list>
				<value>-url</value>
				<value>jdbc:hsqldb:mem:testdb</value>
				<value>-user</value>
				<value>sa</value>
				<value>-password</value>
				<value></value>
			</list>
		</property>
	</bean>

</beans>